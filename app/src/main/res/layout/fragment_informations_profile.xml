<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_profil3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="0"
        android:text="Mes informations"
        android:textAlignment="center"
        android:textColor="#ff914d"
        android:textSize="34sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:context=".Views.ProfileFragment">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#CDFF914D" />

            <ImageView
                android:id="@+id/imageView_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24" />

        </FrameLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#A8FF6F00"
            android:text="Modifier" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="6px"
            android:layout_marginTop="10dp"
            android:background="#E4E4E4"
          />


        <EditText
            android:id="@+id/textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:textColor="#505050"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="6px"
            android:layout_marginTop="15dp"
            android:id="@+id/ViewTextName"
            android:background="#E4E4E4" />

        <EditText
            android:id="@+id/textView_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="Prénom"
            android:inputType="textPersonName"
            android:textColor="#505050"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="6px"
            android:layout_marginTop="15dp"
            android:background="#E4E4E4"
            android:id="@+id/ViewTextSurname"
            />

        <EditText
            android:id="@+id/textView_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="Adresse e-mail"
            android:inputType="textEmailAddress"
            android:textColor="#505050"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="6px"
            android:layout_marginTop="15dp"
            android:background="#E4E4E4"
            android:id="@+id/ViewTextEmail"/>

        <EditText
            android:id="@+id/textView_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:hint="Numéro de téléphone"
            android:inputType="phone"
            android:textColor="#505050"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="6px"
            android:layout_marginTop="15dp"
            android:background="#E4E4E4"
            android:id="@+id/ViewTextPhone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/informations_rounded_button"
            android:text="Mettre à jour"
            android:textColor="#F0FFFFFF" />

    </LinearLayout>

</LinearLayout>
