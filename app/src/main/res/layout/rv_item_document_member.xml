<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ItemRecyclerViewDocumentLayout"
            android:layout_width="168dp"
            android:layout_height="173dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0"
            android:background="#eeeeee"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ItemRecyclerViewLogoStatus"
                android:layout_width="114dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_weight="0"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/ItemRecyclerViewDocumentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:background="#6e6e6f"
                android:text="   Justificatif.png"
                android:textColor="#e9e8e9"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ItemRecyclerViewDocumentStatus"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="0"
                android:background="#6e6e6f"
                android:text=""
                android:textColor="#e9e8e9"
                android:textSize="9sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>