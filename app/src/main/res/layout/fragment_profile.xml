<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffefe"
    android:orientation="vertical"
    tools:context=".Views.ProfileFragment">

    <TextView
        android:id="@+id/textView_profil"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="0"
        android:text="Mon profil"
        android:textAlignment="center"
        android:textColor="#ff914d"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="683dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:background="#f0f0f1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/layout_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_profile"
                android:layout_width="98dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_baseline_person_24"
                tools:src="@tools:sample/avatars"

                />

            <TextView
                android:id="@+id/textView_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:text="Nom"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:text="Prenom"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/button_profile_signout"
                android:layout_width="78dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/deconnexion"
                app:tint="#ff914d" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_profile_information"
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_weight="0"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif"
            android:text="Mes Informations"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_profile_commande"
            android:layout_width="303dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif"
            android:text="Mes commandes"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_profile_document"
            android:layout_width="301dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif"
            android:text="Mes documentDisplays"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_profile_demande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:backgroundTint="#72FF9800"
            android:text="DEMANDE D'INSCRIPTION" />

    </LinearLayout>

</LinearLayout>
