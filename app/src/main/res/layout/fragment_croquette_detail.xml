<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CroquetteDetailFragment">

    <ImageView
        android:id="@+id/imageView_croquette_detail"
        android:layout_width="182dp"
        android:layout_height="148dp"
        android:src="@drawable/croquette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/textView_nom_croquette_detail"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Nom de la croquette"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_croquette_detail"
        app:layout_constraintVertical_bias="0.372" />

    <TextView
        android:id="@+id/textView_description_croquette_detail"
        android:layout_width="296dp"
        android:layout_height="202dp"
        android:text="TextView"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nom_croquette_detail"
        app:layout_constraintVertical_bias="0.076" />

    <Button
        android:id="@+id/button_ajouter_croquette_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_description_croquette_detail" />

    <Button
        android:id="@+id/button_retour_croquette_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/button_ajouter_croquette_detail"
        app:layout_constraintTop_toBottomOf="@+id/textView_description_croquette_detail" />

    <Button
        android:id="@+id/button_enlever_croquette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enlever"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_retour_croquette_detail"
        app:layout_constraintStart_toEndOf="@+id/button_ajouter_croquette_detail"
        app:layout_constraintTop_toBottomOf="@+id/textView_description_croquette_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>